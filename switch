public class Main {

    public static void main(String[] args) {
        var estación = "Verano";

        switch (estación) {
            case "Verano":
                System.out.println("es verano");
                break;
            case "Otoño":
                System.out.println("es otoño");
                break;
            case "Invierno":
                System.out.println("es invierno");
                break;
            case "Primavera":
                System.out.println("es primavera");
                break;
            default: 
                System.out.println("no es una estación");
                break;
        }
    }
}
